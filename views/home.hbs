<h1 > Home 
    <link rel="stylesheet" href="public/style.css" />
</h1>
<p>This is the {{ title }} page</p>
<form action="/create" method="POST">
<div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" class="form-control">
    <input type="submit" value="Add Member" class="btn btn-primary btn-block">
  </div>
</form>


<h4>Open Chatrooms</h4>
<ul class="list-group">
  {{#each chatroomlist}}
  {{!-- <li class="list-group-item">{{this.name}}: {{this.email}}</li> --}}
  <li class="list-group-item">{{this.name}}</li>
        <form action="/{{this.name}}" method="GET">
        <input type="submit" value="Enter" class = "btn btn-primary btn-block">
        
        </form>
  {{/each}}
</ul>

